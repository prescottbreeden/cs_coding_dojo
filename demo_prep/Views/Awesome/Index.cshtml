@using demo_prep.Models
@model User
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Awesome Users</title>
</head>
<style>
  * {
    margin: 0;
    padding: 0;
  }
  html {
    font-size: 66.25%;
  }
  body {
    font-size: 2rem;
    padding: 3rem;
  }
  .title {
    margin: 2rem;
  }
  .form {
    width: 30%;
  }
  .form__row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: right;
  }
  .form__label {
    width: 25%;
    margin-right: 1rem;
  }
  .form__input {
    width: 60%;
  }
  .users__row {
    display: flex;
    width: 70%;
    justify-content: space-between;
    border-bottom: 1px solid blue;
    padding: 1rem;
  }
  .users__row p {
    width: 30%;
  }
</style>
<body>
  <h2 class="title">Create a new user:</h2>
  <form action="/users" class="form" method="post">
    <div class="form__row">
      <label for="name_field" class="form__label">Name:</label>
      <input name="Name" type="text" class="form__input" id="name_field">
    </div>
    <div class="form__row">
      <label for="email" class="form__label">Email:</label>
      <input name="Email" type="email" class="form__input">
    </div>
    <div class="form__row">
      <label for="location_field" class="form__label">Location:</label>
      <input name="Location" type="text" class="form__input" id="location_field">
    </div>
    <button>Submit</button>
  </form>
  <h2 class="title">All Users:</h2>  
  <div class="users">
    @{
      foreach (User user in UserFactory.AllUsers)
      {
        <div class="users__row">
          <p>@user.Name</p>
          <p>@user.Email</p>
          <p>@user.Location</p>
        </div>
      }
    }
  </div>
</body>
</html>